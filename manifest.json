{
  "manifest_version": 2,
  "name": "Youtube Longs",
  "version": "1.0",
  "description": "Turn off Youtube shorts.",
  "icons": {
    "48": "icons/pants48x48.png"
  },

  "permissions": ["tabs", "activeTab", "storage"],

  "browser_action": {
    "default_icon": "icons/pants48x48.png",
    "default_title": "Youtube Longs",
    "default_popup": "popup/longs.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content_scripts/longify.js"],
      "run_at": "document_idle"
    }
  ]
}
